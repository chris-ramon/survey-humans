<a href="#" class="show_hide_form_search btn" onclick="open_close_div_search('form_search'); return false;"><i class="icon-search"></i> Search Filters</a>
<div style="clear:both"></div>

<%= form_for @search, :url => match_management_question_index_path, :html => {:method => :get, :id=>'form_search', :style=>'display:none', :remote=>true} do |f| %>
  <fieldset>
    <legend><%=t('search.search')%></legend>
    <dl class="inline">
      <dt><%= f.label t('.answer_format') %></dt>
      <dd><%= f.select :answer_format_id_eq,@list_answer_formats.collect {|t| [t.name,t.id]},{:include_blank=>"#{t('.all_answer_format')}"} %></dd>
      <dt><%= f.label t('.question_type') %></dt>
      <dd><%= f.select :question_type_id_eq,@list_question_types.collect {|t| [t.name,t.id]},{:include_blank=>"#{t('.all_question_type')}"} %></dd>
      <dt><%= f.label t('.match') %></dt>
      <dd><%= f.select :match_id_eq,@list_matches.collect {|t| [t.name,t.id]},{:include_blank=>"#{t('.all_match')}"} %></dd>
    </dl>
    <div class="buttons">
      <%= submit_tag(t('search.search'), :disable_with => t('buttons.processing'), :class => "btn")%>          
      <span id='loading_search' style='display:none'><img alt='Loading' border='0' height='14' src="<%=image_path('style/loading.gif')%>" width='14'></span>
    </div>
  </fieldset>
<% end %>

<%=search_loading_js 'form_search'%>
