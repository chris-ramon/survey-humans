<% title t('.title')%>
<%= render :partial=>"layouts/messages" %>

<div style="border-radius:8px;border:1px solid #ccc;padding:7px;">
<h2><%=yield :title%>
		<%if @match.url.nil?%>
          <%=link_to "Generate URL", generate_url_for_survey_match_management_survey_index_path+"&id="+@match.id.to_s, :class=>"btn" unless !current_user.has_access(21)%>
    <%else%>
        <small><a href="<%=@match.url%>"><%=@match.url%></a></small>
        <!--Share Facebook -->
        <a class="btn btn-primary" href="<%=@facebook_url%>"><img src="/img/icon-fb.png"></a>
        <!--Share Twitter -->
        <a class="twitter-share-button" href="https://twitter.com/share" data-url="<%=@twitter_url%>" data-text="A new survey" data-size="large" data-count="none" data-hashtags="SurveyHumans"></a>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
        <!--Share by email -->
        <a class="btn" href="#send-email" role="button" data-toggle="modal"><i class="icon-envelope"></i> Send Email</a>
        <div class="modal hide fade" id="send-email" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <%= render :partial => "send_email", :id=>@match.id.to_s %>
        </div>

    <%end%>
</h2>
</div>
<br>
<%= render :partial => "form" %>

<%= render :partial=>"layouts/validation",:locals=>{:form_id=>'form_match'} %>
