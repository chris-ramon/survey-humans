<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3>Email <small><%=@match.url%></small></h3>
</div>

<%= form_tag(send_exam_by_email_match_management_exam_index_path+'&id='+@match.id.to_s, :method=>"put") do %>   
  <div class="modal-body">
      <div class="control-group">
			  <label class="control-label" for="inputIcon">Email address</label>
			  <div class="controls">
			    <div class="input-prepend">
			      <span class="add-on"><i class="icon-envelope"></i></span>
			    <%if !@match.course.nil?%>
			      <%emails=Array.new%>
			      <%@match.course.students.each_with_index{|x,index| emails[index]=x.email}%>
			      <textarea class="span2" id="inputIcon" type="text" name="emails" style="max-width: 495px; max-height:50px; width: 495px; height:50px;" placeholder="user1@surveyhumans.com, user2@surveyhumans.com,"><%=emails.join(", ")%></textarea>
				<%else%>
			      	<textarea class="span2" id="inputIcon" type="text" name="emails" style="max-width: 495px; max-height:50px; width: 495px; height:50px;" placeholder="user1@surveyhumans.com, user2@surveyhumans.com,"></textarea>
			    <%end%>
			    </div>
			  </div>
			  <label class="control-label" for="inputIcon">Message</label>
			  <div class="controls">
			    <div class="input-prepend">
			    	<span class="add-on"><i class="icon-align-justify"></i></span>
			      <textarea class="span2" id="inputIcon" type="text" name="message" style="max-width: 495px; max-height:170px; width: 495px; height:170px; "></textarea>
			    </div>
			  </div>
		</div>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" >Close</button>
    <%= submit_tag(t('buttons.send'), :disable_with => t('buttons.processing'), :class=>"btn btn-success", :dismiss=>"modal")%>
  </div>
<% end %>

		