<section id="sign-up-wrapper">
<!--[if !IE]> -->
  <legend><h3><%=t('.sign_in')%></h3></legend>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div><%= f.label :email %></div>
	  <div><%= f.email_field :email %></div>

	  <div><%= f.label :password %></div>
	  <div><%= f.password_field :password %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>

	  <div><%= f.submit "Sign in", :class => "btn btn-primary"  %></div>
	<% end %>

	<%= render :partial => "devise/shared/links" %>
