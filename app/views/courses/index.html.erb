<% title t('.title') %>
<a href="<%=match_management_exam_index_path%>" class="btn"><i class="icon-chevron-left"></i> Back to Exams</a>
<h1>Courses</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %> | 
        <%= link_to 'Destroy', course, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add Course', new_course_path , :class=>"btn btn-info"%>
