<div class="">
    <% if notice != nil %>
      <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
          <p id="notice"><%= notice %></p>
      </div>
    <% end %>
<legend>Organization &raquo; <%= @panel_organization.name %></legend>
    <div class="row-fluid">
        <div class="header-actions span6">
            <% if @panel_organization.user_id == current_user.id %>
              <%= link_to 'Edit', edit_panel_organization_path(@panel_organization) %> |
            <% end %>
        </div>
    </div>
<p>
  <b>Administrator:</b>
  <%= @panel_organization.user.email %>
</p>

<% if @members.length > 0 %>
<div class="span6">
  <p>
      <strong>Members:</strong>

  </p>
  <table class="table table-bordered table-striped">
      <thead>
      <tr>
          <th>Email</th>
          <% if @panel_organization.user_id == current_user.id %>
            <th>Access to matches:</th>
            <th>Actions</th>
          <% end %>
      </tr>
      </thead>
      <tbody>
      <% @members.each do |match_access| %>
      <tr>
          <td><%= match_access.panel_organization_member.user.email %></td>
          <% if @panel_organization.user_id == current_user.id %>
            <td>
                <ul>
                    <% match_access.matchaccess_matches.each do |match_access_match|%>
                    <li><%= match_access_match.match.name %></li>
                    <% end %>
                </ul>
            </td>
            <td>
                <a href="#" class="btn btn-warning">Edit</a>
            </td>
          <% end %>
      </tr>
      <% end %>
      </tbody>
  </table>
</div>
<% else  %>
      <p>There are no members yet.</p>
<% end %>


</div>
