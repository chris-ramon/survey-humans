<%= form_for(@panel_deal) do |f| %>
    <% if @panel_deal.errors.any? %>
      <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <div id="error_explanation">
            <h4><%= pluralize(@panel_deal.errors.count, "error") %>. Please fix the following errors:</h4>

            <ul>
                <% @panel_deal.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
      </div>
    <% end %>


  <div class="field">
    <%= f.label :panel_plan %><br />
      <%= f.select :panel_plan_id, @panel_plans.collect { |t| [t.name, t.id] } %>
  </div>
  <div class="field">
    <%= f.label :valid_until %><br />
    <%= f.datetime_select :valid_until %>
  </div>
  <div class="field">
    <%= f.label :deal_type %><br />
    <%= select(:panel_deal, :deal_type , options_for_select(Panel::Deal::DEALS_TYPE) ) %>
  </div>
  <div class="field">
    <%= f.label :deal %><br />
    <%= f.text_field :deal %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-info btn-large' %>
  </div>
<% end %>
