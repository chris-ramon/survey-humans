<!DOCTYPE html>
<html>
<head>
  <title>SurveyHumans</title>
  <%= csrf_meta_tag %>
  <%= render :partial => "layouts/header_user"%>
</head>
<body>
<div class="container">
    <div id="main-navbar-top" class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div id="main-navbar-top-container" class="container">

                <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>

                <!-- Be sure to leave the brand out there if you want it shown -->
                <a class="brand" href="<%=home_path%>">Survey Humans</a>

              <%if current_user.nil?%>
                <!-- Everything you want hidden at 940px or less, place within here -->
                <div class="nav-collapse">
                    <!-- .nav, .navbar-search, .navbar-form, etc -->
                    <ul class="nav pull-right">
                        <li><a href="#">Discover</a></li>
                        <li><a href="#">About Us</a></li>
                        <li class="divider-vertical"></li>
                        <a href="<%=new_user_session_path%>" id="login-button" class="btn btn-small btn-info">SIGN IN</a>
                        <a href="<%=sign_up_path%>" class="btn btn-small btn-success">SIGN UP</a>
                    </ul>
                </div>
              <%else%>
                <div class="nav-collapse">
                      <!-- .nav, .navbar-search, .navbar-form, etc -->
                      <ul class="nav">
                          <li class="divider-vertical"></li>
                          <li><%= link_to 'Dashboard', root_path, :id=>"site-title" %></li>
                          <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=t("panel.matches")%> <b class="caret"></b></a>
                              <ul class="dropdown-menu">
                                  <li><%=link_to t("panel.surveys"), match_management_survey_index_path %></li>
                                  <li><%=link_to t("panel.exams"), match_management_exam_index_path %></li>
                              </ul>
                          </li>
                      </ul>
                      <ul class="nav pull-right">
                          <li><%= link_to current_user.email , account_management_user_path(current_user.id) %></li>
                          <li class="divider-vertical"></li>
                          <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                  My Account
                                  <i class="caret"></i>
                              </a>
                              <ul class="dropdown-menu">
                                  <li><%= link_to "My profile" , account_management_user_path(current_user.id) %></li>
                                  <li class="divider"></li>
                                  <li><%= link_to t('logout'), destroy_user_session_path, :method => :delete %></li>
                              </ul>
                          </li>
                          <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                  Languages
                                  <i class="caret"></i>
                              </a>
                              <ul class="dropdown-menu">
                                  <li><%= link_to "English", url_for( :locale => 'en') %></li>
                                  <li><%= link_to "Spanish", url_for( :locale => 'es') %></li>
                              </ul>
                          </li>
                      </ul>
                  </div>
              <% end %>

            </div>
        </div>
    </div>

    <section id="main-content" class="container-fluid">
      <%= yield %>
    </section>

    <footer class="navbar navbar-fixed-bottom">
        <div class="navbar-inner">
            <div id="main-navbar-bottom-container" class="container">
                <ul class="nav">
                    <li class="active"><a href="#">Home</a></li>
                    <li><a href="#">About Us</a></li>
                    <li><a href="#">Privacy</a></li>
                    <li><a href="#">Discover</a></li>
                    <li><a href="#">Blog</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
                <p class="pull-right">Â© 2011-2012 Survey Humane.</p>
            </div>
        </div>
    </footer>
</div>
</body>
</html>
