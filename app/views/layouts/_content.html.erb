<!DOCTYPE HTML>
<html lang="en">
<head>
  <%= render :partial => "layouts/header"%>
</head>
<body>
  <div class="container">
      <div id="main-navbar-top" class="navbar navbar-fixed-top">
          <div class="navbar-inner">
              <div id="main-navbar-top-container" class="container">

                  <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
                  <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                  </a>

                  <!-- Be sure to leave the brand out there if you want it shown -->
                  <a class="brand" href="<%=home_path%>">Survey Humans</a>

                  <!-- Everything you want hidden at 940px or less, place within here -->
                  <div class="nav-collapse">
                      <!-- .nav, .navbar-search, .navbar-form, etc -->
                      <ul class="nav">
                          <li class="divider-vertical"></li>
                          <li><%= link_to 'Dashboard', root_path, :id=>"site-title" %></li>
                          <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Matches <b class="caret"></b></a>
                              <ul class="dropdown-menu">
                                  <li><a href="#">Surveys</a></li>
                                  <li><a href="#">Exams</a></li>
                              </ul>
                          </li>
                      </ul>
                      <ul class="nav pull-right">
                          <li><%= link_to current_user.fullname , account_management_user_path(current_user.id), :class => "dropdown-toggle" ,:'data-toggle' => 'dropdown' %></li>
                          <li class="divider-vertical"></li>
                          <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                  My Account
                                  <i class="caret"></i>
                              </a>
                              <ul class="dropdown-menu">
                                  <li><a href="#"></a></li>
                                  <li class="divider"></li>
                                  <li><%= link_to t('logout'), destroy_user_session_path, :method => :delete %></li>
                              </ul>
                          </li>
                          <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                  Languages
                                  <i class="caret"></i>
                              </a>
                              <ul class="dropdown-menu">
                                  <li><%= link_to "English", url_for( :locale => 'en') %></li>
                                  <li><%= link_to "Spanish", url_for( :locale => 'es') %></li>
                              </ul>
                          </li>
                      </ul>
                  </div>

              </div>
          </div>
      </div>

      <section id="main-content" class="container-fluid">
          <h3>Dashboard</h3>
          <div class="row-fluid">
              <aside id="aside-nav-panel" class="span3">
                  <h2><%=t('modules')%></h2>
                  <%= render :partial => "layouts/sidebar"%>
              </aside>
              <section class="span9">
                  <%= yield %>
              </section>
          </div>

      </section>

    <section id="content">
      <section class="container_12 clearfix">
        <!--<section id="main" class="grid_12 push_0">-->
        <aside id="show_sidebar_tab" style="display:none;">
          <%= link_to_function image_tag("standard/resultset_next.png"), "show_sidebar()", :style=>"position: absolute;border: 1px solid #AAA;padding: 12px 0px 4px 10px;background:#F4F4F4;left: 0px"%>
        </aside>
        <section id="main" class="grid_10 push_2">
          <article>

              </article>
        </section>
      </section>
    </section>

    <script type="text/javascript"> Cufon.now(); </script>
    <script type="text/javascript">
     Cufon.replace('h1'); // Works without a selector engine
    </script>
  </div>
</body>
</html>
